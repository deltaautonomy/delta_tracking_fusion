    <!-- Run ego-vehicle prediction -->
    <include file="$(find delta_prediction)/launch/ego_vehicle_prediction.launch">
    </include>

    <!-- Run the perception pipeline -->
    <node
        pkg="delta_perception"
        type="main.py"
        name="main_perception"
        output="screen">
    </node>

    <!-- Display input image -->
    <node
        name="image_view_input"
        pkg="image_view"
        type="image_view"
        respawn="false"
        output="screen">
        <remap from="image" to="/carla/ego_vehicle/camera/rgb/front/image_color" />
    </node>

    <!-- Display object detection and tracking image -->
